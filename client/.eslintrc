{
  "parser": "babel-eslint",
  "extends": [
    "standard",
    "standard-react"
  ],
  "env": {
    "browser": true,
    "jest": true
  },
  "globals": {
    "__DEV__": true,
    "__PROD__": true,
    "__DEBUG__": true,
    "__COVERAGE__": true,
    "__BASENAME__": true
  },
  "rules": {
    "jsx-quotes": [1, "prefer-double"],
    "max-len": [
      2,
      120
    ],
    "prefer-arrow-callback": 0,
    "arrow-parens": [
      1
    ],
    "flowtype/require-valid-file-annotation": [
      1,
      "always"
    ],
    "flowtype/space-after-type-colon": [
      1,
      "always"
    ],
    "keyword-spacing": 1,
    "space-before-blocks": [1],
    "flowtype/require-return-type": [
      1,
      "always",
      {
        "excludeArrowFunctions": true
      }
    ],
    "no-use-before-define": 0,
    "no-async-without-await/no-async-without-await": 0
  }
}
