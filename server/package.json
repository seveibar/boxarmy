{
  "name": "generals-server",
  "version": "0.0.0",
  "description": "Generals game server",
  "engineStrict": true,
  "private": true,
  "engines": {
    "node": ">= 6.2"
  },
  "devDependencies": {
    "babel-cli": "~6.18.0",
    "babel-core": "~6.20.0",
    "babel-eslint": "~7.1.1",
    "babel-jest": "~17.0.2",
    "babel-plugin-transform-async-to-generator": "~6.16.0",
    "babel-plugin-transform-es2015-modules-commonjs": "~6.18.0",
    "babel-plugin-transform-flow-strip-types": "~6.18.0",
    "babel-plugin-transform-runtime": "~6.15.0",
    "babel-preset-stage-3": "~6.17.0",
    "eslint": "~3.11.1",
    "eslint-config-airbnb-base": "~10.0.1",
    "eslint-config-standard": "^6.2.1",
    "eslint-config-standard-react": "^4.2.0",
    "eslint-plugin-flowtype": "~2.29.1",
    "eslint-plugin-import": "~2.2.0",
    "eslint-plugin-no-async-without-await": "~1.2.0",
    "flow-bin": "~0.37.0",
    "jest": "~17.0.3"
  },
  "scripts": {
    "start": "npm build && node dist/src/index.js",
    "clean": "rm -rf coverage dist tmp",
    "lint": "eslint .",
    "postlint": "npm run typecheck",
    "typecheck": "flow check",
    "pretest": "npm run lint",
    "test": "npm run test-only",
    "test-only": "jest --runInBand --coverage",
    "test:watch": "jest --runInBand --watch",
    "build": "babel src/**/*.js -d dist",
    "build:watch": "babel --watch src/**/*.js -d dist"
  },
  "author": "Severin Ibarluzea (http://seveibar.com)",
  "jest": {
    "bail": true,
    "verbose": true,
    "browser": false,
    "automock": false,
    "testEnvironment": "node",
    "moduleFileExtensions": [
      "js",
      "jsx",
      "json"
    ],
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "src/**/*.js"
    ]
  },
  "dependencies": {
    "babel-runtime": "~6.20.0",
    "eslint-plugin-promise": "^3.4.0",
    "eslint-plugin-react": "^6.8.0",
    "eslint-plugin-standard": "^2.0.1",
    "express": "^4.14.0",
    "moment": "^2.17.1",
    "range": "^0.0.3",
    "redis": "^2.6.3",
    "redlock": "^2.1.0",
    "request-promise": "^4.1.1",
    "shortid": "^2.2.6"
  }
}
